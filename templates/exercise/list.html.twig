{% extends 'base.html.twig' %}

{% block title %}List of Exercises{% endblock %}

{% block body %}
    <h1>List of Exercises</h1>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Test</th>
                <th>Passwords</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for exercise in exercises %}
                <tr>
                    <td>{{ exercise.id }}</td>
                    <td>{{ exercise.test }}</td>
                    <td>{{ exercise.passwords }}</td>
                    <td>
                        <a href="{{ path('exercise_view', {'id': exercise.id}) }}" class="btn btn-primary">View</a>
                        <a href="{{ path('exercise_edit', {'id': exercise.id}) }}" class="btn btn-secondary">Edit</a>
                        <a href="{{ path('exercise_delete', {'id': exercise.id}) }}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this exercise?')">Delete</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('exercise_create') }}" class="btn btn-success">Create New Exercise</a>
{% endblock %}