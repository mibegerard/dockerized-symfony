{% extends 'base.html.twig' %}

{% block title %}Delete Exercise{% endblock %}

{% block body %}
    <h1>Delete Exercise</h1>
    
    <p>Are you sure you want to delete this exercise?</p>
    
    <form method="post" action="{{ path('exercise_delete', {'id': exercise.id}) }}" onsubmit="return confirm('Are you sure you want to delete this exercise?')">
        {{ form_widget(form._token) }}
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>
    
    <a href="{{ path('exercise_list') }}" class="btn btn-secondary">Cancel</a>
</div>
{% endblock %}
